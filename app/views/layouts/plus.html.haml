%html
  %head
    %title 
      = yield :title
    %meta{:charset => "utf-8"}
    / SEO
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "keywords"}
    %meta{:content => "",:name => "author"}
    / favicon
    %link{:href => "plus/favicon.ico", :rel => "icon"}/
    %link{:href => "plus/favicon.ico", :rel => "shortcut icon"}/
    / CSS
    = stylesheet_link_tag "plus/style"
    = stylesheet_link_tag "plus/jquery.bxslider.css"
    / JS
    = javascript_include_tag "plus"

    /[if lt IE 8]
      %div{:style => ' clear: both; text-align:center; position: relative;'}
        = link_to image_tag("http://storage.ie6countdown.com/assets/100/images/banners/warning_bar_0000_us.jpg", :border => 0, :height => 42, :width => 820, :alt => "You are using an outdated browser. For a faster, safer browsing experience, upgrade for free today."), "http://windows.microsoft.com/en-US/internet-explorer/products/ie/home?ocid=ie6_countdown_bannercode"
    /[if lt IE 9]
      = stylesheet_link_tag "plus/ie"
      = javascript_include_tag "plus/html5"

  %body{:id => @body_id.nil? ? "page2" : @body_id}
    .bg
      .bg2
        / ==============================header=================================
        %header
          .header-bg
            .main
              .container_24
                .wrapper
                  %nav
                    %ul{:class => "menu"}
                      %li
                        = link_to "Home", "/", :id => "home_nav"
                      %li
                        = link_to "About", about_path, :id => "about_nav"
                      %li
                        = link_to "Questions", questions_path, :id => "question_nav"
                      %li 
                        = link_to "News & Activities", news_index_path, :id => "news_nav"
                      %li 
                        = link_to "Services Locator", service_providers_path, :id => "service_providers_nav"
                      %li
                        = link_to "Community", users_path, :id => "community_nav"
                      %li
                        = link_to "FAQ", faq_path, :id => "faq_nav"
                      %li
                        = link_to "Contact", contact_path, :id => "contact_nav"
                  .language
                    %span
                      Language :
                      = select_tag "language", "<option>English</option><option>Germany</option><option>Italy</option>".html_safe
                .grid_24.title1
                  .logo
                    = link_to image_tag("plus/logo.jpg"), "/"
                  .right_l
                    .sign_in
                      = link_to image_tag("plus/sign_in.png"), new_user_session_path
                    .soc_icon
                      = link_to image_tag("plus/twitter1.png"), "http://www.twitter.com", :target => "blank"
                      = link_to image_tag("plus/facebook1.png"), "http://www.facebook.com", :target => "blank"
                .clear
        /==============================slider================================
        = yield :slider_content
