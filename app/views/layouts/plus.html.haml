                .grid_24.title1
                  .logo
                    = link_to image_tag("plus/logo.jpg"), "/"
                  .right_l
                    .wrapper1
                      = link_to image_tag("plus/sign_in.png", :class => "sign_in"), "javascript:void(0);", :id => "trigg", :class => "sign_in"
                      #obj
                        #cancel
                        .sample
                          .grid_18_1
                            .grid_9_1
                              = form_for :user, :url => session_path(:user), :html => {:id => "login_form"} do |f|
                                %spam{:class => "email"}
                                  %label{:class => "name"}
                                    Email
                                  = f.text_field :email
                                %span{:class => "password"}
                                  %label{:class => "name"}
                                    Password
                                  = f.password_field :password
                                  - if params[:pp] && params[:format] != 'mobile'
                                    = hidden_field_tag :pp, 1
                                .signs
                                  = link_to "Sign in", "#", :id => "login_button"
                                %span{:class => "fyp"}
                                  = link_to t('devise.passwords.link'), new_password_path(:user)
                                = f.check_box :remember_me
                                %span{:class => "chek"}
                                  Remember me
                                .sgn
                                  Sign up with
                                  = link_to "email address", "javascript:void(0);", :id => "trigg1"
                            .grid_9_1
                              Login with
                              - current_group.auth_providers.each do |provider|
                                - next if params[:controller] == 'invitations' && ['Twitter','Facebook'].include?(provider)
                                - dprovider = provider.downcase
                                - if provider == 'Facebook' && current_group.has_facebook_login?
                                  = link_to image_tag("plus/fs1.jpg"), '/users/auth/facebook', :class => 'auth-provider Facebook', :id => 'facebook'
                                - elsif provider == 'Google'
                                  = link_to image_tag("plus/gl.jpg"), multiauth_url(provider), :class => "auth-provider #{provider}", :id => dprovider
                                - elsif provider == 'Twitter'
                                  = link_to image_tag("plus/tw1.jpg"), multiauth_url(provider), :class => "auth-provider #{provider}", :id => dprovider
                      #obj1
                        #cancel1
                          %ul
                            = form_for :user, :url => users_path, :html => {:id => "signup_form"} do |f|
                              %li{:class => "name1"}
                                %label{:class => "name"}
                                  Login
                                = f.text_field :login
                              %li{:class => "r_name"}
                                %label{:class => "name"}
                                  Name
                                = f.text_field :name
                              %li{:class => "email"}
                                %label{:class => "name"}
                                  Email
                                = f.text_field :email
                              %li{:class => "password"}
                                %label{:class => "name"}
                                  Password
                                = f.text_field :password
                              %li{:class => "r_password"}
                                %label{:class => "name"}
                                  Retype Password
                                = f.text_field :password_confirmation
                          .signs1
                            = link_to "Sign up", "#", :id => "signup_button"
                          .signs2
                            = link_to "Back", "javascript:void(0);", :id => "trigg2"

                    .soc_icon
                      = link_to image_tag("plus/twitter1.png"), "http://www.twitter.com", :target => "blank"
                      = link_to image_tag("plus/facebook1.png"), "http://www.facebook.com", :target => "blank"
                .clear
