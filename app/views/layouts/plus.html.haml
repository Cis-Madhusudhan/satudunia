  %body{:id => @body_id.nil? ? "page2" : @body_id}
    .bg
      .bg2
        / ==============================header=================================
        %header
          .header-bg
            .main
              .container_24
                .wrapper
                  %nav
                    %ul{:class => "menu"}
                      %li
                        = link_to "Home", "/", :id => "home_nav"
