:javascript
  $(window).load(function (){
    $('#sort_newest').removeClass('selected');
    $('#sort_oldest').removeClass('selected');
    $('#sort_views').removeClass('selected');
    $('#sort_votes').removeClass('selected');

    switch('#{params[:sort]}'){
      case "oldest":
        $('#sort_oldest').addClass('selected');
        break;
      case "views":
        $('#sort_views').addClass('selected');
        break;
      case "votes":
        $('#sort_votes').addClass('selected');
        break;
      default:
        $('#sort_newest').addClass('selected');
        break;
    }
  });







